@model Winx 
@{
	ViewData["Title"] = "winx";
	var tipos = (List<Tipo>)ViewData["Tipos"];
	string Cor(string nome)
	{
		return tipos
		  .Where(t => t.Nome == nome)
		  .Select(t => t.Cor)
		  .FirstOrDefault();
	} 
}


<section class="pt-5 container">
	<div class="row">
		<div class="col text-center">
			<a href="#" class="btn btn-lg btn-outline-dark">001- Bloom</a>
		</div>
		<div class="col text-center">
			<h1 class="fs-1">Musa <span class="fs-2 text-secondary">Nº 002</span></h1>
		</div>
		<div class="col text-center">
			<a href="#" class="btn btn-lg btn-outline-dark">003 - </a>
		</div>
	</div>

	<div class="row mt-3">
		<div class="col-lg-5 p-0">
			<img class="img-fluid cursor-pointer" src="img/winx/002.png" alt="Musa">
		</div>
		<div class="col-lg-7 fs-5 mt-4">
			<p class="mb-3"><strong>Descrição:</strong> Musa tem a capacidade de afetar as ondas sônicas e o ar. Ela vem do planeta Melody, sendo apaixonada por todos os tipos de música</p>
			<p class="mb-3"><strong>Espécie:</strong> Fada da Música</p>
			<p class="mb-3"><strong>Altura:</strong> 1.60</p>
			<p class="fw-bold">Tipo</p>
			<div class="btn-group">
			    @foreach (var tipo in Model.Tipo)
				{
					<a href="#" class="btn btn-lg text -white" style="background-color:@Cor(tipo)">
						
					</a>
				}
			</div>
		</div>
	</div>
</section>